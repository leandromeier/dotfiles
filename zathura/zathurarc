set recolor true
set default-bg \#222230
set recolor-lightcolor \#222222

set synctex true
set synctex-editor-command "nvim +%{line} %{input}"

unmap d
map d scroll half-down
map m scroll half-down
map u scroll half-up
map e scroll half-up

map <C-d> toggle_page_mode
map b toggle_page_mode
map <C-1> set "first-page-column 1:1"
map <C-2> set "first-page-column 1:2"
map t toggle_index
map s toggle_statusbar

set selection-clipboard clipboard

